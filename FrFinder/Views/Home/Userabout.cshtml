                        <div class="col-lg-8 col-md-8">
                            <div class="central-meta">
                                <span class="create-post">Edit Your Profile</span>
                                <div class="row">
                                    <form action="~/Home/Userabout" method="post" class="c-form" enctype="multipart/form-data">
                                        <div class="tab-pane fade show active pl-5" id="edit-profile">
                                            <div class="setting-meta">
                                                <div class="change-photo">
                                                    <figure><img src="~/Content/images/profilepics/@userInf.UserPhoto" alt=""></figure>
                                                    <div class="edit-img">
                                                        <label class="fileContainer">
                                                            <i class="fa fa-camera-retro"></i>
                                                            Chage DP
                                                            <input type="file" name="userimg" id="userimg">
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="stg-form-area">

                                                <div>
                                                    <label>Display Name</label>
                                                    <input type="text" value="@user.Name" name="username" id="username">
                                                </div>
                                                <div>
                                                    <label>Display Surname</label>
                                                    <input type="text" value="@user.Surname" name="usersurname" id="usersurname">
                                                </div>

                                                <div>
                                                    <label>Telephone Number</label>
                                                    <input type="text" value="@userInf.UserPhone" name="userphone" id="userphone">
                                                </div>

